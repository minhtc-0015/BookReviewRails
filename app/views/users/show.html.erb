        </div>
        <div class="tab-pane fade in" id="tab2">
            <% if @book != nil %>
             <% @book.each do |minh| %>
             <a href="/books/<%=minh.id %>">
              <%= image_tag minh.book_img.url(:book_index), class: "book" %>
              </a>
              <% @bookfavorite_search = Bookfavorite.where(:book_id => minh.id).first %>
              <% if logged_in? %>
              <% if current_user.id == @bookfavorite_search.user_id %>
              <%= link_to 'Delete',user_bookfavorite_path(@user.id,@bookfavorite_search.id), method: :delete, data: {confirm: "are you sure"}  %>
              <% end %>
              <% end %>
              <% end %>
            <% else %>
            chua co sach
            <% end %>
        </div>
        <div class="tab-pane fade in" id="tab3">
          <h3>Danh sách user đang theo dõi</h3>
          <% @user_follow = @user.follow1s.all %>
          <% @user_follow.all.each do |user| %>
          <% user_follow1 = User.find(user.follow_user_id) %>
          <a href="<%= user_path(user_follow1)%>">
          <img alt="" src="<%= user_follow1.user_img.url(:user_index) %>">
          </a>
          <% if current_user == @user %>
          <%= link_to 'Delete',user_follow1_path(@user.id,user.id), method: :delete, data: {confirm: "are you sure"}  %>
          <% end %>     
          <% end %>
          <h3>Danh sách user theo dõi bạn</h3>
          <% user_follow1 = Follow1.where(:follow_user_id => @user.id).order("created_at DESC") %>
